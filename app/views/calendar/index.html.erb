	<div id ="calendar_cont">
		<%= raw(event_calendar) %>
	</div>
	<% if user_signed_in? %>
		<%= render 'event_form' %>
	<% end %>
	
	<div id ="nav">
			<%= link_to 'Go to next day', day_nav(-1) %><br />
	<%= link_to "View today's events", day_nav(0) %><br />
		<%= link_to 'Go to previous day', day_nav(1) %><br/><br />

	<em>Oncoming events:</em><br />
	<% @todays.each do |tod_event| %>
		<%= link_to tod_event.name, "/events/#{tod_event.id}" %><br />
	<% end %>
	
</div>